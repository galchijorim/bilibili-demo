page{
  color: #666666;
  padding: 10rpx;
}
.nav_wrap{}
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav_item.active{
  border-bottom: 5rpx solid #de688b;
}
.slides{
  margin: 10rpx;
}
.slides swiper{
  height: 220rpx;
}
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}
.video{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
}
.item{
  width: 48%;
  margin-bottom: 20rpx;
  padding: 20rpx;
}
.video_img{
  position: relative;
}

.video_img image{
  width: 100%;
  border-radius: 15rpx;
} 
.info{
  position: absolute;
  left: 0;
  bottom: 10rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}
.info text{
  font-size: 20rpxl
}
.video_title{
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}